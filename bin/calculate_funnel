#!/usr/bin/env ruby

require 'byebug'
require 'concurrent'
require 'io/console'
require 'json'
require 'open3'
require 'ruby-progressbar'

require_relative '../lib/heroku'
require_relative '../lib/funnel/funnel'
require_relative '../lib/funnel/cohort'

THREADS = 8

# Gets user input from console, but hides what they're typing.
#
# See http://stackoverflow.com/a/11765329 for source.
def gets_hidden
  STDIN.noecho(&:gets)
end

unless Heroku.authed?
  if Heroku.login_interactive
    puts "Success!"
  else
    puts "Failed to login."
  end
end

funnel = Funnel.new(
  Cohort.new(4, 2016),
  Cohort.new(5, 2016),
  Cohort.new(6, 2016),
  Cohort.new(7, 2016),
  Cohort.new(8, 2016),
  Cohort.new(9, 2016),
  Cohort.new(10, 2016),
  Cohort.new(11, 2016),
  Cohort.new(12, 2016),
  Cohort.new(1, 2017),
  Cohort.new(2, 2017),
  Cohort.new(3, 2017),
  Cohort.new(4, 2017)
)

puts "Loading..."
funnel.load

puts "Processing..."
funnel.process

puts "Rendering..."
puts funnel.render
